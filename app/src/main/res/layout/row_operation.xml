<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/row_operation_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="August"
        android:textSize="12dp"
        android:layout_below="@+id/row_operation_amount"
        android:layout_alignEnd="@+id/row_operation_instalments" />

    <TextView
        android:id="@+id/row_operation_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:textSize="30dp"
        android:layout_alignTop="@+id/row_operation_amount"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/row_operation_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 50.00"
        android:textSize="30dp"
        android:layout_below="@+id/row_operation_instalments"
        android:layout_toEndOf="@+id/row_operation_description"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/row_operation_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AlmoÃ§o"
        android:textSize="30dp"
        android:layout_marginStart="25dp"
        android:layout_alignTop="@+id/row_operation_amount"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/row_operation_instalments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1x"
        android:textSize="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="August"
        android:textSize="12dp"
        android:layout_below="@+id/row_operation_day"
        android:layout_alignParentStart="true" />

</RelativeLayout>